    <HBox spacing="15" styleClass="filter-bar" alignment="CENTER_LEFT">
        <Label text="ðŸ”" styleClass="palm-accent"/>
        <TextField fx:id="searchField" promptText="Search for hidden gems, experiences, recommendations..." HBox.hgrow="ALWAYS" onKeyReleased="#onSearchKeyReleased"/>
        
        <Separator orientation="VERTICAL"/>
        
        <Label text="ðŸ“‚" styleClass="palm-accent"/>
