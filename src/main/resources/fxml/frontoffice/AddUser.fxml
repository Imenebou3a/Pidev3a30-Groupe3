<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.AddUserController"
            styleClass="main-container">

    <!-- HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <Button text="← Retour" onAction="#handleBack" styleClass="btn-secondary"/>
            <Label text="Ajouter un utilisateur" styleClass="title" style="-fx-font-size: 24px;"/>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- CONTENU -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox spacing="30" alignment="TOP_CENTER">
                <padding>
                    <Insets top="50" bottom="50" left="100" right="100"/>
                </padding>

                <!-- FORMULAIRE -->
                <VBox spacing="25" maxWidth="800" styleClass="card">
                    <padding>
                        <Insets top="40" bottom="40" left="60" right="60"/>
                    </padding>

                    <Label text="Créer un nouveau compte utilisateur" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                    <GridPane hgap="30" vgap="20">
                        <!-- Ligne 1 -->
                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Label text="Nom *" style="-fx-font-weight: bold;"/>
                            <TextField fx:id="nomField" promptText="Nom" styleClass="text-field" prefWidth="300"/>
                            <Label fx:id="nomError" styleClass="error-label" visible="false" managed="false"/>
                        </VBox>

                        <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Label text="Prénom *" style="-fx-font-weight: bold;"/>
                            <TextField fx:id="prenomField" promptText="Prénom" styleClass="text-field" prefWidth="300"/>
                            <Label fx:id="prenomError" styleClass="error-label" visible="false" managed="false"/>
                        </VBox>

                        <!-- Ligne 2 -->
                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <Label text="Email *" style="-fx-font-weight: bold;"/>
                            <TextField fx:id="emailField" promptText="exemple@email.com" styleClass="text-field"/>
                            <Label fx:id="emailError" styleClass="error-label" visible="false" managed="false"/>
                        </VBox>

                        <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <Label text="Téléphone *" style="-fx-font-weight: bold;"/>
                            <TextField fx:id="telephoneField" promptText="12345678" styleClass="text-field"/>
                            <Label fx:id="telephoneError" styleClass="error-label" visible="false" managed="false"/>
                        </VBox>

                        <!-- Ligne 3 -->
                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="2">
                            <Label text="Mot de passe *" style="-fx-font-weight: bold;"/>
                            <PasswordField fx:id="passwordField" promptText="Min 8 caractères" styleClass="password-field"/>
                            <Label fx:id="passwordError" styleClass="error-label" visible="false" managed="false"/>
                        </VBox>

                        <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <Label text="Confirmation mot de passe *" style="-fx-font-weight: bold;"/>
                            <PasswordField fx:id="confirmPasswordField" promptText="Confirmer" styleClass="password-field"/>
                            <Label fx:id="confirmPasswordError" styleClass="error-label" visible="false" managed="false"/>
                        </VBox>

                        <!-- Ligne 4 -->
                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="3">
                            <Label text="Rôle" style="-fx-font-weight: bold;"/>
                            <ComboBox fx:id="roleCombo" styleClass="combo-box" prefWidth="300"/>
                        </VBox>

                        <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <Label text="Statut" style="-fx-font-weight: bold;"/>
                            <ComboBox fx:id="statutCombo" styleClass="combo-box" prefWidth="300"/>
                        </VBox>
                    </GridPane>

                    <Separator/>

                    <!-- MESSAGE -->
                    <Label fx:id="messageLabel" styleClass="error-label" visible="false" managed="false" wrapText="true"/>

                    <!-- BOUTONS -->
                    <HBox spacing="20" alignment="CENTER">
                        <Button text="✓ Créer l'utilisateur" onAction="#handleCreate" styleClass="btn-success" prefWidth="200" prefHeight="45"/>
                        <Button text="✗ Annuler" onAction="#handleBack" styleClass="btn-outline" prefWidth="150" prefHeight="45"/>
                    </HBox>

                </VBox>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>