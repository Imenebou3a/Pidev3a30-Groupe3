                        </VBox>

                        <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <Label text="Statut" style="-fx-font-weight: bold;"/>
                            <ComboBox fx:id="statutCombo" styleClass="combo-box" prefWidth="300"/>
                        </VBox>
                    </GridPane>

                    <Separator/>

