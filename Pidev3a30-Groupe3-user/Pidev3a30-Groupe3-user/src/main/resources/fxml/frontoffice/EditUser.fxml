                            <Label fx:id="prenomError" styleClass="error-label" visible="false" managed="false"/>
                        </VBox>

                        <!-- Ligne 2 -->
                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <Label text="Email *" style="-fx-font-weight: bold;"/>
