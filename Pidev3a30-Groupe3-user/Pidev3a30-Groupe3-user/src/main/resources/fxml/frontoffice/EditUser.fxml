                        </VBox>

                        <!-- Ligne 3 -->
                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="2">
                            <Label text="Adresse" style="-fx-font-weight: bold;"/>
                            <TextField fx:id="adresseField" styleClass="text-field"/>
                        </VBox>

                        <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <Label text="Bio" style="-fx-font-weight: bold;"/>
                            <TextArea fx:id="bioField" prefRowCount="3" styleClass="text-field" wrapText="true"/>
                        </VBox>

                        <!-- Ligne 4 -->
                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="3">
                            <Label text="RÃ´le" style="-fx-font-weight: bold;"/>
