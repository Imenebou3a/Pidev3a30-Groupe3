                    </HBox>

                    <Separator/>

                    <GridPane hgap="20" vgap="15" styleClass="form-grid">
                        <Label text="ID" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-label"/>
                        <TextField fx:id="txtModifId" editable="false"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="form-field-disabled"/>

                        <Label text="Nom du produit *" GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="form-label"/>
                        <TextField fx:id="txtModifNom"
                                   GridPane.columnIndex="3" GridPane.rowIndex="0" styleClass="form-field"/>

                        <Label text="CatÃ©gorie *" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="form-label"/>
                        <ComboBox fx:id="comboModifCategorie"
                                  GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="form-field" maxWidth="Infinity"/>

                        <Label text="RÃ©gion *" GridPane.columnIndex="2" GridPane.rowIndex="1" styleClass="form-label"/>
                        <ComboBox fx:id="comboModifRegion"
                                  GridPane.columnIndex="3" GridPane.rowIndex="1" styleClass="form-field" maxWidth="Infinity"/>

                        <Label text="Prix (TND) *" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="form-label"/>
                        <TextField fx:id="txtModifPrix"
                                   GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="form-field"/>

                        <Label text="Stock *" GridPane.columnIndex="2" GridPane.rowIndex="2" styleClass="form-label"/>
                        <TextField fx:id="txtModifStock"
                                   GridPane.columnIndex="3" GridPane.rowIndex="2" styleClass="form-field"/>

                        <Label text="URL Image" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="form-label"/>
                        <TextField fx:id="txtModifImageUrl"
