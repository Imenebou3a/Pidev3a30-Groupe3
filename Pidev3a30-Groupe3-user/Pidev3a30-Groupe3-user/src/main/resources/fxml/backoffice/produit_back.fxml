                        <Label text="CatÃ©gorie *" GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="form-label"/>
                        <VBox spacing="5" GridPane.columnIndex="3" GridPane.rowIndex="0">
                            <ComboBox fx:id="comboAjoutCategorie" promptText="SÃ©lectionner" styleClass="form-field" maxWidth="Infinity"/>
                            <Label fx:id="lblErreurCategorie" styleClass="error-label" wrapText="true" visible="false"/>
