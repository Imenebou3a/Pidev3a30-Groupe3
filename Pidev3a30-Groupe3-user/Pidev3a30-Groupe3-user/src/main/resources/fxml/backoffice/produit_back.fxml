                <!-- Barre de recherche et filtres -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="txtRecherche" promptText="ðŸ” Rechercher par nom..."
                               styleClass="search-field" prefWidth="300"/>
                    <ComboBox fx:id="comboCategorie" promptText="CatÃ©gorie"
                              styleClass="filter-combo" prefWidth="150"/>
                    <ComboBox fx:id="comboRegion" promptText="RÃ©gion"
                              styleClass="filter-combo" prefWidth="150"/>
                    <Button text="RÃ©initialiser" onAction="#reinitialiserFiltres" styleClass="btn-secondary"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Exporter CSV" onAction="#exporterCSV" styleClass="btn-secondary"/>
                </HBox>

                <!-- Vue en Grille avec Cartes -->
                <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS" 
                            style="-fx-background-color: transparent; -fx-background: transparent;">
                    <FlowPane fx:id="gridProduits" hgap="20" vgap="20" 
                              style="-fx-background-color: transparent; -fx-padding: 10;">
                        <!-- Les cartes seront ajoutÃ©es dynamiquement par le contrÃ´leur -->
                    </FlowPane>
                </ScrollPane>
            </VBox>
        </Tab>

        <!-- TAB 2: AJOUTER -->
        <Tab text="âž• Ajouter un Produit">
            <ScrollPane fitToWidth="true" styleClass="form-scroll">
                <VBox spacing="20" styleClass="tab-content">
                    <padding><Insets top="30" right="40" bottom="30" left="40"/></padding>

                    <Label text="Nouveau Produit Local" styleClass="form-title"/>

                    <GridPane hgap="20" vgap="10" styleClass="form-grid">
                        <!-- Ligne 1: Nom -->
                        <Label text="Nom du produit *" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-label"/>
                        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <TextField fx:id="txtAjoutNom" promptText="Ex: ChÃ©chia traditionnelle" styleClass="form-field"/>
                            <Label fx:id="lblErreurNom" styleClass="error-label" wrapText="true" visible="false"/>
